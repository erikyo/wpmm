{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"outDir": "lib",
		"rootDir": "src",
		"pretty": false,
		"removeComments": true,
		"typeRoots": ["src/types.d.ts", "node_modules/@types", "@types"]
	},
	"include": ["./src/**/*"]
}
